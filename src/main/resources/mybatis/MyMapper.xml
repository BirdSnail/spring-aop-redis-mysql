<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.hcsp.mapper.RankMapper">
    <resultMap id="rankItem" type="com.github.hcsp.entity.RankItem">
        <result property="score" column="sum_score"/>
        <association property="goods" javaType="com.github.hcsp.entity.Goods">
            <result property="name" column="goods_name"/>
        </association>
    </resultMap>

    <select id="selectRank" resultMap="rankItem">
        select g.name as goods_name, sum_score
        from (select goods_id, sum(price * quantity) as sum_score
              from `order`
              group by goods_id) t
                 right join goods g
                            on t.goods_id = g.id
        order by sum_score desc
    </select>


</mapper>