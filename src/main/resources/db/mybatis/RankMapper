<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="RankMapper">
    <select id="selectRank" resultMap="rankitem">
        select  name, ifnull(money,0) as money
        from (select goods_id, goods.name as name, sum(price * quantity) as money
              from `order`
                       right join goods
                                  on
                                      `order`.goods_id = goods.id
              group by goods_id
             ) as us
        order by money desc;
    </select>
    <resultMap id="rankitem" type="rankitem">
<!--        <result property="order" column="i"/>-->
        <result property="name" column="name"/>
        <result property="money" column="money"/>
    </resultMap>
</mapper>