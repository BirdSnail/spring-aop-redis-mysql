<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.hcsp.OrderMapper">
<!--    这里不能用xx.xx的语法设置到resultMap中-->
    <select id="selectOrder" resultMap="Order">
        select
            `order`.id as order_id,
            `order`.price as order_price,
            `order`.quantity as order_quantity,

            user.id as user_id,
            user.name as user_name,

            goods.id as goods_id,
            goods.name as good_name

        from `order`
        left join user
        on `order`.user_id = user.id
        left join goods
        on `order`.goods_id = goods.id;
    </select>
    <resultMap id="Order" type="com.github.hcsp.entity.Order">
        <result column="order_id" property="id"/>
        <result column="order_price" property="price"/>
        <result column="order_quantity" property="quantity"/>
        <association property="user" javaType="com.github.hcsp.entity.User">
            <result column="user_id" property="id"/>
            <result column="user_name" property="name"/>
        </association>
        <association property="goods" javaType="com.github.hcsp.entity.Goods">
            <result column="goods_id" property="id"/>
            <result column="goods_name" property="name"/>
        </association>
    </resultMap>
</mapper>